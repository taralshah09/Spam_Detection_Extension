{
    "manifest_version": 3,
    "name": "Spam Detector",
    "version": "1.0",
    "description": "Detect spam in selected text",
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "host_permissions": [
      "http://127.0.0.1:8000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }